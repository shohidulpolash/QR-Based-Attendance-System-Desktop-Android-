<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border1"
    tools:context=".TeachersPageAfterLogin">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="105dp"
        android:src="@drawable/teacherpageicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />
    <Button
        android:fontFamily="@font/baloo_bhai"
        android:textSize="20sp"
        android:id="@+id/takeAttendanceTeacherAfterLoginPage"
        android:layout_width="285dp"
        android:layout_height="119dp"
        android:background="@drawable/modelone"
        android:text="Take Attendance"
        android:textColor="#000000"
        app:backgroundTint="#00DA2C2C"
        app:backgroundTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <Button
        android:fontFamily="@font/baloo_bhai"
        android:textSize="20sp"
        android:id="@+id/showAttendanceTeacherAfterLoginPage"
        android:layout_width="285dp"
        android:layout_height="119dp"
        android:background="@drawable/modelone"
        android:text="Show Attendance"
        android:textColor="#000000"
        app:backgroundTint="#00DA2C2C"
        app:backgroundTintMode="src_over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />
</androidx.constraintlayout.widget.ConstraintLayout>