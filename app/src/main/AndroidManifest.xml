<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartattendancesystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.Read_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.Write_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAttendanceSystem">
        <activity android:name=".show_Attendance"></activity>
        <activity android:name=".TakeAttendance" />
        <activity android:name=".StudentPageAfterLogIn" />
        <activity android:name=".RegisterPageForStudent" />
        <activity android:name=".LoginPageForStudent"></activity>
        <activity android:name=".TeachersPageAfterLogin" />
        <activity android:name=".Star_Page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterPage" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>